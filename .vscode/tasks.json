// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "compile",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "온보딩 테스트 실행",
      "type": "shell",
      "command": "node",
      "args": ["test_onboarding_live.js"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "dependsOn": "npm: compile"
    },
    {
      "label": "Extension + 온보딩 테스트",
      "dependsOrder": "sequence",
      "dependsOn": ["npm: compile", "온보딩 테스트 실행"],
      "group": "test"
    },
    {
      "label": "온보딩 설정 초기화",
      "type": "shell",
      "command": "echo",
      "args": [
        "온보딩 재테스트를 위해 VSCode 설정에서 'hapa.userProfile.isOnboardingCompleted'를 삭제하세요."
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      }
    }
  ]
}
